<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#7CA6C0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Your Information"
        android:id="@+id/textView10"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:id="@+id/createUsername"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createPassword"
        android:layout_below="@+id/createUsername"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22dp"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/createUsername"
        android:layout_alignStart="@+id/createUsername"
        android:layout_alignRight="@+id/createUsername"
        android:layout_alignEnd="@+id/createUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/createName"
        android:layout_below="@+id/createPassword"
        android:hint="Full Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/createPassword"
        android:layout_alignStart="@+id/createPassword"
        android:layout_alignRight="@+id/createPassword"
        android:layout_alignEnd="@+id/createPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/createEmail"
        android:layout_below="@+id/createName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="22dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="Email Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/createPhoneNumber"
        android:layout_below="@+id/createEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hyphenationFrequency="normal"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:hint="000-000-0000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Register"
        android:id="@+id/createRegister"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/createPhoneNumber"
        android:layout_alignStart="@+id/createPhoneNumber"
        android:layout_alignRight="@+id/createPhoneNumber"
        android:layout_alignEnd="@+id/createPhoneNumber"
        android:background="#4A6373"
        android:textColor="#ffffff" />

</RelativeLayout>